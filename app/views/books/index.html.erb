<section class='feed'>
  <%= render 'layouts/shared/user_info_menu' %>

  <section class='books-list'>
    <% @books.each do |book| %>
    <div class='card transparent'>
     <div class="card-image">
       <% if book.cover.attached? %>
         <%= image_tag(book.cover) %>
       <% end %>
     </div>
      <div class='card-content'>
        <span class='card-title'>
          <%= link_to truncate(book.title, length: 25), book_path(book) %>
        </span>
        <p><%= truncate(book.description, length: 25) %></p>
      </div>
    </div>
    <% end %>
  </section>

  <%= render 'layouts/shared/user_side_menu' %>
</section>
