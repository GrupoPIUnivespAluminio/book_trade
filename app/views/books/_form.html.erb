<section class='basic-form'>
  <%= form_with model: @book, local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :cover %>
    <%= f.file_field :cover %>

    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>

    <%= f.submit 'Enviar' %>
  <% end %>

  <%= link_to 'Voltar', books_path %>
</section>

